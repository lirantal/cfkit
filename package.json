{
  "name": "cfkit",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:markdown": "markdownlint -c .github/.markdownlint.yml -i '.git' -i '__tests__' -i '.github' -i '.changeset' -i 'CODE_OF_CONDUCT.md' -i 'CHANGELOG.md' -i '**/docs/**' -i '**/node_modules/**' -i 'dist' '**/**.md' --fix",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "turbo run build && pnpm changeset publish --provenance"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "latest",
    "markdownlint-cli": "^0.47.0",
    "prettier": "latest",
    "rimraf": "^6.1.3",
    "tsup": "^8.5.1",
    "turbo": "latest",
    "typescript": "latest"
  },
  "packageManager": "pnpm@10.27.0",
  "engines": {
    "node": ">=22"
  }
}
